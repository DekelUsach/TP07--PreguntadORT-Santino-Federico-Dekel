<!-- GAME OVER -->
<h1 class="Title">¡Felicitaciones, ha terminado el preguntados con un puntaje de @Juego.PuntajeActual!</h1>
<div class="Fondo-Ranking"> <!-- Mover la clase aquí -->
    @foreach (Usuarios usu in ViewBag.Usuarios)
    {
        <div class="pais">
            <p>@usu.IdUsuario</p>
            <div>
                <p>@usu.Nombre</p>
            </div>
            <p>Puntaje: @usu.Puntaje</p>
        </div>
    }
    <div style="display: flex; justify-content: center; margin-top: 20px;">
    <form method="post" action="@Url.Action("GuardarRanking", "Home")">
        <button type="submit" class="btn-guardar">Guardar Ranking</button>
    </form>
</div>
</div>

<!-- Botón para guardar el ranking -->


@{
    if (ViewBag.Guardado == true)
    {
        <p style="text-align: center;">GUARDADO</p>
    }
}
